<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a9"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#000"
        android:paddingLeft="50dp"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="REGISTRATION"
        android:textColor="#1E88E5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="40dp"
        android:paddingLeft="50dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="Name"
        android:textColor="#1E88E5"
        android:textSize="10sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_black"
        android:elevation="5dp"
        android:ems="15"
        android:hint="Enter your Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#000000"
        tools:targetApi="lollipop"
        android:autofillHints="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#000"
        android:paddingLeft="50dp"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="Email"
        android:textColor="#1E88E5"
        android:textSize="10sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_black"
        android:elevation="5dp"
        android:ems="15"
        android:hint="Enter your Email"
        android:inputType="textEmailAddress"

        android:padding="10dp"
        tools:targetApi="lollipop"
        android:autofillHints="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#000"
        android:paddingLeft="50dp"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="Mobile"
        android:textColor="#1E88E5"
        android:textSize="10sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editMob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_black"
        android:elevation="5dp"
        android:ems="15"
        android:hint="Mobile"
        android:inputType="text|phone"

        android:padding="10dp"
        tools:targetApi="lollipop"
        android:autofillHints="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#000"
        android:paddingLeft="50dp"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="Password"
        android:textColor="#1E88E5"
        android:textSize="10sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_black"
        android:elevation="5dp"
        android:ems="15"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        tools:targetApi="lollipop"
        android:autofillHints="" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="Select\nDepartment"
            android:textColor="#2196F3"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerdpt"
            android:layout_width="150dp"
            android:layout_marginLeft="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_black"
            android:elevation="5dp"
            android:ems="15"
            android:layout_marginTop="5dp"
            android:minHeight="40dp"
            tools:targetApi="lollipop" />

        <include
            android:id="@+id/my_loading_layout"
            layout="@layout/my_loading_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonAcount"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shadow_btn_layer_list"
        android:ems="15"
        android:text="Sign Up"
        android:drawableTint="#2196F3"
        android:textAllCaps="false"
        android:textColor="#fff"
        tools:targetApi="m" />


</LinearLayout>