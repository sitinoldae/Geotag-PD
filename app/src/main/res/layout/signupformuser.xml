<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a9"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:ems="15"
        android:padding="10dp"
        android:background="@drawable/shadow_black"
        android:elevation="5dp"
        android:hint="Enter your Name"
        android:inputType="textPersonName"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/shadow_black"
        android:elevation="5dp"
        android:ems="15"
        android:hint="Enter your Email"

        android:inputType="textEmailAddress" />

    <EditText
        android:padding="10dp"
        android:background="@drawable/shadow_black"
        android:elevation="5dp"
        android:id="@+id/editMob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:ems="15"
        android:hint="Mobile"

        android:inputType="text|phone" />

    <EditText
        android:id="@+id/editPass"
        android:padding="10dp"
        android:background="@drawable/shadow_black"
        android:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:ems="15"
        android:hint="Password"
        android:inputType="textPassword" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="50sp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerdpt"
            android:layout_width="200dp"
            android:padding="10dp"
            android:background="@drawable/shadow_black"
            android:elevation="5dp"
            android:layout_height="wrap_content"
            android:ems="15" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Select Department"
            android:textColor="#2196F3"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <include
            android:id="@+id/my_loading_layout"
            layout="@layout/my_loading_layout" />

    </LinearLayout>
    <Button
        android:id="@+id/buttonAcount"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shadow_color"
        android:ems="15"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:text="Create a New Acount"
        android:textColor="#2196F3"
        android:textSize="15sp"
        android:textStyle="bold" />


</LinearLayout>