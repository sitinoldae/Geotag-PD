<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/a9"
    android:animateLayoutChanges="true"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a9"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-black"
            android:gravity="start"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:text="LOGIN"
            android:textColor="#1E88E5"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-black"
            android:gravity="start"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:visibility="gone"
            android:text="Username"
            android:textColor="#1E88E5"
            android:textSize="12sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/shadow_black"
                android:elevation="5dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textAlignment="center"
                tools:targetApi="lollipop"
                 />

            <ImageView
                android:layout_width="48dp"
                android:layout_gravity="right"
                android:layout_height="48dp"
                android:padding="10dp"
                android:id="@+id/iv_verification"
                android:src="@drawable/ic_null"
                android:contentDescription="defualt" />

            <ImageView
                android:layout_width="48dp"
                android:layout_gravity="right"
                android:layout_height="48dp"
                android:padding="10dp"
                android:visibility="gone"
                android:id="@+id/iv_verification2"
                android:src="@drawable/ic_verified"
                android:contentDescription="defualt" />
        </FrameLayout>

        <Button
            android:id="@+id/checkUsernameBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shadow_btn_layer_list"
            android:text="Continue"
            android:padding="5dp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/black"
            android:textAllCaps="true"
            android:textColor="#fff"
            tools:targetApi="lollipop" />
        <Button
            android:id="@+id/forgotPasswordBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="50dp"
            android:paddingHorizontal="20dp"
            android:text="forgot password ?"
            android:background="@drawable/btn_shadow"
            android:textAlignment="viewEnd"
            android:textColor="#F44336"
            tools:targetApi="lollipop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-black"
            android:gravity="start"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:id="@+id/tv_password"
            android:text="Password"
            android:textColor="#1E88E5"
            android:textSize="12sp"
            android:visibility="gone"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mypass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/shadow_black"
            android:elevation="5dp"
            android:ems="10"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textAlignment="center"
            tools:targetApi="lollipop"
             />


        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow_btn_layer_list"
            android:text="Log In"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/createnewac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Create a new Account"
            android:textColor="#000"
            android:background="@drawable/btn_shadow"
            android:paddingHorizontal="20dp"
            android:textSize="15sp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>