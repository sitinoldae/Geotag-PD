<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".VerifyOTPActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/verify_otrp_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shadow_black"
            android:elevation="5dp"
            android:inputType="number"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Enter the OTP received"
            android:singleLine="true" />


        <Button
            android:id="@+id/otp_conti_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_color"
            android:text="Verify"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/timer_"-->
            <!--android:layout_gravity="end"-->
            <!--android:textColor="@color/black"-->
            <!--android:gravity="start"-->
            <!--android:textSize="15dp"-->
            <!--android:text="01:00"/>-->

            <TextView
                android:id="@+id/text_resend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Resend OTP"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:text="OTP is sent to Your Mobile Number"
            android:textColor="#2196F3"
            android:textSize="12dp" />

    </LinearLayout>

</RelativeLayout>